# =============================================================================
# SpinSource Environment Configuration
# =============================================================================

APP_NAME=SpinSource
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_TIMEZONE=UTC
APP_URL=http://localhost

# =============================================================================
# Logging
# =============================================================================
LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# =============================================================================
# Database Configuration (Docker)
# =============================================================================
DB_CONNECTION=mysql
DB_HOST=db
DB_PORT=3306
DB_DATABASE=spinsource
DB_USERNAME=spinsource
DB_PASSWORD=secret
DB_ROOT_PASSWORD=root

# =============================================================================
# Session & Cache
# =============================================================================
SESSION_DRIVER=redis
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local
QUEUE_CONNECTION=redis
CACHE_STORE=redis

# =============================================================================
# Redis Configuration (Docker)
# =============================================================================
REDIS_CLIENT=phpredis
REDIS_HOST=redis
REDIS_PASSWORD=null
REDIS_PORT=6379

# =============================================================================
# Mail Configuration (Docker - Mailpit)
# =============================================================================
MAIL_MAILER=smtp
MAIL_HOST=mailpit
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

# =============================================================================
# Wikidata Integration
# =============================================================================
WIKIDATA_USER_AGENT="SpinSource/1.0 (contact@example.com)"
WIKIDATA_SPARQL_ENDPOINT="https://query.wikidata.org/sparql"

# =============================================================================
# Search (Typesense)
# =============================================================================
SCOUT_DRIVER=typesense
TYPESENSE_HOST=typesense
TYPESENSE_PORT=8108
TYPESENSE_PROTOCOL=http
TYPESENSE_API_KEY=xyz

# =============================================================================
# Vite (Development)
# =============================================================================
VITE_APP_NAME="${APP_NAME}"

# =============================================================================
# Social Login (Spotify)
# =============================================================================
SOCIALITE_PROVIDERS=spotify
SPOTIFY_CLIENT_ID=
SPOTIFY_CLIENT_SECRET=
SPOTIFY_REDIRECT_URI="${APP_URL}/auth/spotify/callback"
SPOTIFY_SCOPE="user-read-email"
